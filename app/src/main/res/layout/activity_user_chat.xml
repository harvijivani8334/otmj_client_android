<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/routMainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        tools:ignore="ContentDescription">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <View
            android:id="@+id/toolbarDivider"
            style="@style/ToolbarDivider"
            android:layout_below="@+id/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarDivider"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/routJobDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_8dp"
                android:background="@drawable/title_bg"
                android:padding="@dimen/size_10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgJob"
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txtJobTitle"
                    style="@style/SmallFontTextView"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_12dp"
                    android:layout_marginEnd="@dimen/size_12dp"
                    android:layout_toStartOf="@id/imgArrow"
                    android:layout_toEndOf="@id/imgJob"
                    android:fontFamily="@string/font_family_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgArrow"
                    android:layout_width="@dimen/size_12dp"
                    android:layout_height="@dimen/size_12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/size_6dp"
                    app:srcCompat="@drawable/ic_arrow_right"
                    app:tint="@color/colorSecondaryLightText" />
            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txtWhoTyping"
                    android:layout_below="@+id/routJobDetails"
                    android:layout_marginTop="@dimen/size_6dp"
                    android:layout_marginBottom="@dimen/size_10dp">

                    <TextView
                        android:id="@+id/txtHeaderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/rvUserChat"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_14dp"
                        android:layout_marginBottom="@dimen/size_6dp"
                        android:background="@drawable/title_bg"
                        android:paddingStart="@dimen/size_8dp"
                        android:paddingTop="@dimen/size_4dp"
                        android:paddingEnd="@dimen/size_8dp"
                        android:paddingBottom="@dimen/size_4dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_12sp"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUserChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical" />

                </RelativeLayout>

            <TextView
                android:id="@+id/txtWhoTyping"
                style="@style/VerySmallFontTextView"
                android:layout_above="@id/routFooterView"
                android:layout_marginStart="@dimen/size_14dp"
                android:paddingTop="@dimen/size_3dp"
                android:paddingBottom="@dimen/size_3dp"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/routMoveToBottom"
                android:layout_width="@dimen/size_46dp"
                android:layout_height="@dimen/size_46dp"
                android:layout_above="@+id/routFooterView"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/size_11dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_36dp"
                    android:layout_height="@dimen/size_36dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:tint="@color/color_scroll_to_bottom_button_circle"
                    app:srcCompat="@drawable/circle_white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/size_16dp"
                    android:layout_height="@dimen/size_16dp"
                    android:layout_centerInParent="true"
                    android:tint="@color/colorSecondaryText"
                    app:srcCompat="@drawable/ic_scroll_down" />

                <TextView
                    android:id="@+id/txtMessageCount"
                    style="@style/VerySmallFontTextView"
                    android:layout_width="@dimen/size_21dp"
                    android:layout_height="@dimen/size_21dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_default_accent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_10sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/routReplayView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/routFooterView"
                android:background="@color/colorTitleBg"
                android:paddingStart="@dimen/size_12dp"
                android:paddingEnd="0dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgReplayImage"
                    android:layout_width="@dimen/size_76dp"
                    android:layout_height="@dimen/size_76dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:layout_marginEnd="@dimen/size_4dp"
                    android:layout_marginBottom="@dimen/size_12dp"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_6dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:layout_marginEnd="@dimen/size_6dp"
                    android:layout_marginBottom="@dimen/size_12dp"
                    android:layout_toStartOf="@id/imgRemoveReplayView"
                    android:layout_toEndOf="@id/imgReplayImage"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryLightText"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgRemoveReplayView"
                    android:layout_width="@dimen/size_28dp"
                    android:layout_height="@dimen/size_28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/size_4dp"
                    app:srcCompat="@drawable/ic_cancel" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/routSendImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/routFooterView"
                android:background="@color/colorTitleBg"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSendImage"
                    android:layout_width="@dimen/size_130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/size_12dp"
                    android:adjustViewBounds="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgRemoveSendImage"
                    android:layout_width="@dimen/size_28dp"
                    android:layout_height="@dimen/size_28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/size_4dp"
                    app:srcCompat="@drawable/ic_cancel" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/routFooterView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/size_9dp"
                android:layout_marginEnd="@dimen/size_9dp"
                android:layout_marginBottom="@dimen/size_9dp"
                android:background="@drawable/chat_send_message_bg"
                android:paddingStart="@dimen/size_9dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingEnd="@dimen/size_9dp"
                android:paddingBottom="@dimen/size_6dp">

                <EditText
                    android:id="@+id/edtMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_12dp"
                    android:layout_marginEnd="@dimen/size_12dp"
                    android:layout_toStartOf="@id/imgSend"
                    android:background="@color/transparent"
                    android:hint="@string/type_message"
                    android:maxLines="4" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgAttachment"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/size_2dp"
                    android:layout_toStartOf="@id/imgSend"
                    android:padding="@dimen/size_5dp"
                    app:srcCompat="@drawable/ic_baseline_attach_file" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSend"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/size_3dp"
                    app:srcCompat="@drawable/ic_chat_message_send" />

            </RelativeLayout>

        </RelativeLayout>

        <include
            android:id="@+id/previewImage"
            layout="@layout/layout_preview_image" />
    </RelativeLayout>
</layout>
