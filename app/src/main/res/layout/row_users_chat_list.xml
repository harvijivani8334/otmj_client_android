<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/routMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUser"
            android:layout_width="@dimen/size_54dp"
            android:layout_height="@dimen/size_54dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_12dp"
            android:background="@drawable/ic_empty_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txtMessageCount"
            android:layout_toEndOf="@+id/imgUser"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_13dp"
            android:paddingEnd="@dimen/size_20dp">

            <TextView
                android:id="@+id/txtUserName"
                style="@style/SmallFontTextView"
                android:ellipsize="end"
                android:fontFamily="@string/font_family_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/txtJobTitle"
                style="@style/VerySmallFontTextView"
                android:layout_marginTop="@dimen/size_1dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorSecondaryExtraLightText"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/txtLastMessage"
                style="@style/VerySmallFontTextView"
                android:layout_marginTop="@dimen/size_1dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorSecondaryExtraLightText"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtTyping"
                style="@style/VerySmallFontTextView"
                android:layout_marginTop="@dimen/size_1dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="typing..."
                android:textColor="@color/colorSecondaryText"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtMessageCount"
            style="@style/VerySmallFontTextView"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/size_3dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_11sp"
            android:visibility="gone" />

        <View
            style="@style/Divider"
            android:layout_below="@id/imgUser" />
    </RelativeLayout>
</layout>