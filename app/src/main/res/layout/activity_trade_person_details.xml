<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <View
            android:id="@+id/toolbarDivider"
            style="@style/ToolbarDivider"
            android:layout_below="@+id/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarDivider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_25dp"
                    android:paddingTop="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_25dp"
                    android:paddingBottom="@dimen/size_20dp"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgUserProfile"
                        android:layout_width="@dimen/size_76dp"
                        android:layout_height="@dimen/size_76dp"
                        android:layout_centerVertical="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/size_16dp"
                        android:layout_marginEnd="@dimen/size_12dp"
                        android:layout_toStartOf="@+id/imgPin"
                        android:layout_toEndOf="@+id/imgUserProfile"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtUserName"
                            style="@style/MediumFontTextView"
                            android:fontFamily="@string/font_family_medium"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_17sp" />

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgPin"
                        android:layout_width="@dimen/size_27dp"
                        android:layout_height="@dimen/size_27dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_map_pin" />

                </RelativeLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_9dp" />

                <RelativeLayout
                    android:id="@+id/routEmailView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_17dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_17dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_mail" />

                    <TextView
                        style="@style/SmallFontTextView"
                        android:textColor="@color/colorPrimaryText" />

                </RelativeLayout>

                <View style="@style/Divider" />

                <RelativeLayout
                    android:id="@+id/routPhoneNumberView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_15dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_15dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgMessage"
                        android:layout_width="@dimen/size_25dp"
                        android:layout_height="@dimen/size_25dp"
                        android:layout_marginEnd="@dimen/size_18dp"
                        android:layout_toStartOf="@+id/imgCall"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_inactive_chat_tab" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCall"
                        android:layout_width="@dimen/size_25dp"
                        android:layout_height="@dimen/size_25dp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/size_2dp"
                        app:srcCompat="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/txtContact"
                        style="@style/SmallFontTextView"
                        android:textColor="@color/colorPrimaryText" />

                </RelativeLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_9dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/lbl_about"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtAbout"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:text="I am painter"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_14dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/categories_serviced"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtCategoriesService"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:text="I am painter"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_14dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/available_hours"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/available_after_work_hours"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtAvailableAfterWork"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:text="No"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_14dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/lbl_location"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtLocation"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:text="Ahmedabad"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_14dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
