<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="info"
            type="com.app.otmjobs.managejob.data.model.WorkerDetailsInfo" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <View
            android:id="@+id/toolbarDivider"
            style="@style/ToolbarDivider"
            android:layout_below="@+id/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/routBottomView"
            android:layout_below="@id/toolbarDivider"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_20dp"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgUserProfile"
                        android:layout_width="@dimen/size_76dp"
                        android:layout_height="@dimen/size_76dp"
                        android:layout_centerVertical="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/size_16dp"
                        android:layout_marginEnd="@dimen/size_12dp"
                        android:layout_toStartOf="@+id/imgPin"
                        android:layout_toEndOf="@+id/imgUserProfile"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtUserName"
                            style="@style/MediumFontTextView"
                            android:fontFamily="@string/font_family_medium"
                            android:text="@{info.first_name.concat(@string/space).concat(info.last_name)}"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_size_18sp" />

                        <TextView
                            android:id="@+id/txtJobStatus"
                            android:visibility="gone"
                            style="@style/MediumFontTextView"
                            android:textSize="@dimen/text_size_14sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgPin"
                        android:layout_width="@dimen/size_27dp"
                        android:layout_height="@dimen/size_27dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/size_5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_map_pin" />

                </RelativeLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_9dp" />

                <RelativeLayout
                    android:id="@+id/routEmailView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_17dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_17dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_mail" />

                    <TextView
                        style="@style/SmallFontTextView"
                        android:text="@{info.email}"
                        android:textColor="@color/colorPrimaryText" />

                </RelativeLayout>

                <View style="@style/Divider" />

                <RelativeLayout
                    android:id="@+id/routPhoneNumberView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_15dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_15dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgMessage"
                        android:layout_width="@dimen/size_25dp"
                        android:layout_height="@dimen/size_25dp"
                        android:layout_marginEnd="@dimen/size_18dp"
                        android:layout_toStartOf="@+id/imgCall"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_inactive_chat_tab" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCall"
                        android:layout_width="@dimen/size_25dp"
                        android:layout_height="@dimen/size_25dp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/size_2dp"
                        app:srcCompat="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/txtContact"
                        style="@style/SmallFontTextView"
                        android:text="@{info.extension.concat(info.phone)}"
                        android:textColor="@color/colorPrimaryText" />

                </RelativeLayout>

                <View
                    style="@style/Divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_9dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/lbl_about"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtAbout"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:text="@{info.about}"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_12dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/categories_serviced"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtCategoriesService"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:text="@{info.trade_name_web}"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_12dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/available_hours"
                    android:textColor="@color/colorPrimaryText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWorkTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_6dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/available_after_work_hours"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtAvailableAfterWork"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_12dp" />

                <TextView
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:fontFamily="@string/font_family_medium"
                    android:text="@string/lbl_location"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/txtLocation"
                    style="@style/SmallFontTextView"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:text="@{info.city}"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/size_14dp" />

                <fragment
                    android:id="@+id/map"
                    android:name="com.app.otmjobs.common.utils.WorkAroundMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_208dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/routBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/size_6dp"
            android:visibility="gone">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_46dp"
                android:layout_marginEnd="@dimen/size_3dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_bg"
                app:mrl_rippleColor="@color/colorRippleColor"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleDuration="@string/ripple_duration"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/txtAccept"
                    style="@style/SmallFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/accept"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_46dp"
                android:layout_marginStart="@dimen/size_3dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_red_button"
                app:mrl_rippleColor="@color/colorRippleColor"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleDuration="@string/ripple_duration"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/txtReject"
                    style="@style/SmallFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/reject"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>
