<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/routMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtHeaderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_14dp"
            android:layout_marginBottom="@dimen/size_6dp"
            android:background="@drawable/title_bg"
            android:paddingStart="@dimen/size_8dp"
            android:paddingTop="@dimen/size_4dp"
            android:paddingEnd="@dimen/size_8dp"
            android:paddingBottom="@dimen/size_4dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/parentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHeaderDate"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/size_14dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingEnd="@dimen/size_14dp"
            android:paddingBottom="@dimen/size_5dp">

            <LinearLayout
                android:id="@+id/routChatView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/imgMenuItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/size_130dp"
                    android:background="@drawable/ic_chat_right"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/size_12dp"
                    android:paddingTop="@dimen/size_9dp"
                    android:paddingEnd="@dimen/size_12dp"
                    android:paddingBottom="@dimen/size_9dp">

                    <RelativeLayout
                        android:id="@+id/rlMessageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/routReplayView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_6dp"
                            android:background="@drawable/ic_chat_right_replay"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/size_9dp"
                            android:paddingTop="@dimen/size_6dp"
                            android:paddingEnd="@dimen/size_9dp"
                            android:paddingBottom="@dimen/size_6dp"
                            android:visibility="gone">

                            <com.app.otmjobs.common.utils.SquareImageViewByWidth
                                android:id="@+id/imgReplay"
                                android:layout_width="@dimen/size_50dp"
                                android:layout_height="@dimen/size_50dp"
                                android:layout_marginBottom="@dimen/size_6dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txtReplay"
                                style="@style/SmallFontTextView"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/text_size_14sp" />

                        </LinearLayout>

                        <com.app.otmjobs.common.utils.SquareImageViewByWidth
                            android:id="@+id/imgChat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/routReplayView"
                            android:layout_marginBottom="@dimen/size_6dp"
                            android:visibility="gone" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtMsg"
                            style="@style/SmallFontTextView"
                            android:layout_below="@id/imgChat"
                            android:text="is test"
                            android:textColor="@color/colorPrimaryText" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/size_4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtTime"
                            style="@style/VerySmallFontTextView"
                            android:text=""
                            android:textColor="@color/colorSecondaryLightText"
                            android:textSize="@dimen/text_size_10sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgLastSeen"
                            android:layout_width="@dimen/size_14dp"
                            android:layout_height="@dimen/size_14dp"
                            android:layout_marginStart="@dimen/size_4dp"
                            android:tint="@color/colorDarkDivider"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_last_seen" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/routOverLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_1dp"
            android:layout_marginBottom="@dimen/size_1dp"
            android:layout_alignTop="@+id/parentView"
            android:layout_alignBottom="@+id/parentView"
            android:alpha="0.2"
            android:background="#0065ff"
            android:visibility="gone" />

    </RelativeLayout>

    <data>

        <import type="android.view.View" />

        <!--        <variable-->
        <!--            name="chatAdapter"-->
        <!--            type="com.rlsapp.romp.twiliochat.ChatAdapter" />-->

        <!--        <variable-->
        <!--            name="chatDetails"-->
        <!--            type="com.rlsapp.romp.model.entity.response.ChatHistory" />-->
    </data>
</layout>
