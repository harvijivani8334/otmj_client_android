<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_18dp"
            android:paddingTop="@dimen/size_12dp"
            android:paddingEnd="@dimen/size_18dp"
            android:paddingBottom="@dimen/size_12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgPerson"
                android:layout_width="@dimen/size_46dp"
                android:layout_height="@dimen/size_46dp"
                android:layout_centerVertical="true"
                android:tint="@color/light_gray"
                android:visibility="gone"
                app:srcCompat="@drawable/circle_red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgPerson"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPersonName"
                    style="@style/SmallFontTextView"
                    android:fontFamily="@string/font_family_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/txtTime"
                    style="@style/VerySmallFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:textColor="@color/colorSecondaryLightText"
                    android:textSize="@dimen/text_size_13sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRemove"
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_8dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_close" />

        </RelativeLayout>

        <View style="@style/Divider" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>