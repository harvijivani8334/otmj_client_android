<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <View
            android:id="@+id/toolbarDivider"
            style="@style/ToolbarDivider"
            android:layout_below="@+id/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarDivider">

            <LinearLayout
                android:id="@+id/routMainView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/routHelpSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_20dp">

                    <TextView
                        style="@style/MediumFontTextView"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/font_family_medium"
                        android:text="@string/help_support"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_size_14sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgHelpSupportCompleted"
                        android:layout_width="@dimen/size_14dp"
                        android:layout_height="@dimen/size_14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorHint"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_arrow_right" />

                </RelativeLayout>

                <View style="@style/Divider" />

                <RelativeLayout
                    android:id="@+id/routPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_20dp">

                    <TextView
                        android:id="@+id/txtPrivacyPolicy"
                        style="@style/MediumFontTextView"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/font_family_medium"
                        android:text="@string/lbl_privacy_policy"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_size_14sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_14dp"
                        android:layout_height="@dimen/size_14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorHint"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_arrow_right" />

                </RelativeLayout>

                <View style="@style/Divider" />

                <RelativeLayout
                    android:id="@+id/routTermsConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_20dp">

                    <TextView
                        android:id="@+id/txtTermsConditions"
                        style="@style/MediumFontTextView"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/font_family_medium"
                        android:text="@string/lbl_terms_of_use"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_size_14sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_14dp"
                        android:layout_height="@dimen/size_14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorHint"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_arrow_right" />

                </RelativeLayout>

                <View style="@style/Divider" />

                <RelativeLayout
                    android:id="@+id/routWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_20dp">

                    <TextView
                        style="@style/MediumFontTextView"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/font_family_medium"
                        android:text="@string/lbl_website"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/txtWebsite"
                        style="@style/MediumFontTextView"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/font_family_medium"
                        android:text="@string/website_url"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_15sp" />

                </RelativeLayout>

                <View style="@style/Divider" />

                <RelativeLayout
                    android:id="@+id/routVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_20dp">

                    <TextView
                        style="@style/MediumFontTextView"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/font_family_medium"
                        android:text="@string/lbl_app_version"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/txtVersion"
                        style="@style/MediumFontTextView"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/font_family_medium"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_14sp" />

                </RelativeLayout>

                <View style="@style/Divider" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>
